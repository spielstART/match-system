extends layout

block content
  div.page-header
    h1= title
  p.well List of all registered users.
  - var number = 0;
  table.table
    thead
      tr
        th #
        th Username
        th E-Mail
        th Creation date
    tbody
      for user in users
        - number++;
        tr
          td= number
          td= user.username
          td= user.email
          td= user.created.toDateString()
