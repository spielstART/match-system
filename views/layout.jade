doctype 5
html
  head
    title=title
    //link(rel='stylesheet', href='/stylesheets/style.css')
    // Bootstrap
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
  body
    script(src='/javascripts/jquery-1.10.0.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          button(type='button')(data-toggle='collapse')(data-target='.nav-collapse').btn.btn-navbar
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(href='/').brand Match-System
          div.nav-collapse.collapse
            ul.nav
              li
                a(href='/users') Userlist
              if currentUser.username
                li
                  a(href='/tournament') Tournament
                li
                  a(href='/tournament/bracket') Bracket
            ul.nav.pull-right
              if currentUser.username
                li.dropdown
                  a(href="#", data-toggle="dropdown").dropdown-toggle #{currentUser.username}
                    b.caret
                  ul.dropdown-menu
                    li
                      a(href='/user/logout') Logout
              else
                li
                  a(href='/user/signup') Sign up
                li
                  a(href='/user/signin') Sign in
    div.container
      div.hero-unit
        block content
