extends layout

block content
  div.page-header
    h1 Tournament list

  if !tournaments
    p no tournaments yet!
  else
    ul.thumbnails
      for entry in tournaments
        li.span5.clearfix.thumbnail.clearfix
          img.pull-left.span2.clearfix(src='http://placehold.it/320x280', style='margin-right: 10px;')
          a.btn.btn-primary.icon.pull-right(href='/tournament/' + entry._id) Select
          h4
            a(href='#')= entry.title
          small Open for enrollment
            | #{entry.enroll}
